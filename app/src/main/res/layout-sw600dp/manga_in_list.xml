<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="20dp"
    android:gravity="center"
    android:background="@drawable/rectangle_manga">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/mangaTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#e3e9c2"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Название манги" />

        <TextView
            android:id="@+id/mangaScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|end"
            android:textColor="#e3e9c2"
            android:textSize="25sp"
            android:text="Оценка" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#e3e9c2"
            android:textColor="#e3e9c2"
            android:drawableTop="@drawable/ic_edit_600"
            android:gravity="center" />

        <TextView
            android:id="@+id/mangaStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#e3e9c2"
            android:textSize="25sp"
            android:text="Статус" />

        <TextView
            android:id="@+id/mangaProgress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|end"
            android:textColor="#e3e9c2"
            android:textSize="25sp"
            android:text="Прогресс" />
    </LinearLayout>

</LinearLayout>
